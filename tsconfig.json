{
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"noUnusedParameters": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noUnusedLocals": true,
		"removeComments": false,
		"target": "ES2020",
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"exactOptionalPropertyTypes": true
	},
	"include": ["payloads/**/*.ts", "common/v1.ts", "utils.ts", "v1.ts"]
}
